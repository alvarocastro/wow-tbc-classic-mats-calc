<li class="list-group-item d-flex justify-content-between align-items-center py-1 px-2 {{if this.isHidden "d-none"}} {{if @hidden "opacity-50"}}">
  <ItemLink
    @id={{@item.id}}
    @name={{@item.name}}
  />
  {{#if @input}}
  <input
    class="amount-input form-control form-control-sm text-center w-10 p-0"
    type="number"
    placeholder="0"
    min="0"
    value={{@amount}}
    tabindex={{this.tabindex}}
    {{on "input" this.handleInput}}
  />
  {{else}}
  <button
    type="button"
    class="item-visibility-btn btn btn-sm btn-{{if @hidden "secondary" "light"}} setting-btn"
    tabindex={{this.tabindex}}
    {{on "click" (if @hidden this.show this.hide)}}
  >
    <Icon @name={{if @hidden "hidden" "visible"}} />
  </button>
  {{/if}}
</li>
